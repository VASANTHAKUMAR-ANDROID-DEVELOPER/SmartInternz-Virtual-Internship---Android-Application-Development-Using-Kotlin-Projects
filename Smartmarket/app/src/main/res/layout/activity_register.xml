<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070000"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="269dp"
        android:layout_height="81dp"
        android:layout_marginBottom="92dp"
        android:text="@string/smart_market"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/Register"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843"
        app:title="   Register"
        app:titleTextColor="#000000" />

    <EditText

        android:id="@+id/email"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_below="@+id/Register"
        android:autofillHints=""
        android:background="#FFFFFE"
        android:drawablePadding="10dp"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingBottom="20dp"
        android:textColor="#0B0505"
        android:textColorHint="#070505"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361"
        tools:ignore="MissingConstraints" />

    <EditText

        android:id="@+id/pass"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:drawablePadding="10dp"
        android:hint="  Password"
        android:inputType="textPassword"

        android:paddingBottom="20dp"
        android:textColor="#040000"
        android:textColorHint="#050705"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="HardcodedText" />

    <EditText

        android:id="@+id/cpass"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:autofillHints="Confirm Password"
        android:background="#FBFBFA"
        android:drawablePadding="10dp"
        app:passwordToggleEnabled="true"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingBottom="20dp"
        android:textColor="#090000"
        android:textColorHint="#050705"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="86dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/logo_modified_modified"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="87dp"
        android:layout_height="34dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#FF0000"
        android:text="   LOGIN"
        android:textColor="#FCE4EC"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Register"
        app:layout_constraintVertical_bias="0.592" />


</androidx.constraintlayout.widget.ConstraintLayout>